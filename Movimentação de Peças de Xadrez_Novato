#include <stdio.h>

int main(void) {

    int passos_torre  = 5;  /* Torre: 5 casas para a direita */
    int passos_bispo  = 5;  /* Bispo: 5 casas na diagonal para Cima e Direita */
    int passos_rainha = 8;  /* Rainha: 8 casas para a esquerda */

    /* TORRE - FOR
       Move em linha reta (horizontal/vertical). Direita.*/
    printf("Movimento da Torre (for): %d casas para a direita\n", passos_torre);
    for (int i = 1; i <= passos_torre; i++) {
        /* A cada iteração representa uma casa percorrida */
        printf("Direita\n");
    }
    printf("\n");

    /* 
       BISPO — WHILE
       Move nas diagonais. Aqui: Cima + Direita. */
    printf("Movimento do Bispo (while): %d casas na diagonal para cima e à direita\n", passos_bispo);
    int contador_bispo = 0;
    while (contador_bispo < passos_bispo) {
        /* Em diagonal, imprimime as duas direções combinadas */
        printf("Cima Direita\n");
        contador_bispo = contador_bispo + 1; /* incrementa uma casa */
    }
    printf("\n");

    /* 
       RAINHA — DO-WHILE
       Move em todas as direções. Esquerda.*/
    printf("Movimento da Rainha (do-while): %d casas para a esquerda\n", passos_rainha);
    int contador_rainha = 0;
    if (passos_rainha > 0) {
        /* do-while executa o bloco pelo menos uma vez */
        do {
            printf("Esquerda\n");
            contador_rainha = contador_rainha + 1;
        } while (contador_rainha < passos_rainha);
    }

    return 0;
}
